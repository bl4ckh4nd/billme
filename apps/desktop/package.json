{
  "name": "billme",
  "private": true,
  "version": "0.1.0",
  "description": "Billme desktop invoicing application",
  "license": "MIT",
  "homepage": "https://billme.app",
  "author": {
    "name": "Billme Team",
    "email": "opensource@billme.app"
  },
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "rebuild:native": "node scripts/rebuild-electron.mjs",
    "dev": "electron-vite dev --watch",
    "dev:renderer": "vite",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "dist": "pnpm build && electron-builder --config electron-builder.yml",
    "test": "vitest",
    "test:einvoice": "vitest --run services/einvoice",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@billme/ui": "workspace:*",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-router": "^1.153.1",
    "better-sqlite3": "^12.4.1",
    "iconv-lite": "^0.6.3",
    "keytar": "^7.9.0",
    "lucide-react": "^0.562.0",
    "nodemailer": "^6.9.15",
    "papaparse": "^5.5.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^13.0.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tailwindcss/vite": "^4.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.7",
    "@types/nodemailer": "^6.4.16",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.18",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "electron": "^37.10.3",
    "electron-builder": "26.7.0",
    "electron-vite": "^4.0.1",
    "happy-dom": "^20.5.3",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.8.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
